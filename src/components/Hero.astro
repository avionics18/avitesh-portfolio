---
// data imports
import siteData from "../data/siteData.json";
const hero_img = "/images/" + siteData.image;
---

<section class="row hero mb-5">
	<div class="col-lg-7 order-lg-1 order-2">
		<h1 class="font-weight-bold text-primary">{siteData.title}</h1>
		<p class="lead">{siteData.course} - {siteData.branch} | <span class="font-weight-bold">{siteData.college.shortname}</span></p>
		<p class="text-secondary">
			{siteData.description}
		</p>
		<a href="/resume" class="btn btn btn-primary btn-sm mb-2">View Resume<i class="fas fa-chevron-right ml-2"></i></a>
		<a href="/projects" class="btn btn btn-outline-dark btn-sm mb-2">View Projects<i class="fas fa-chevron-right ml-2"></i></a>
	</div>
	<div class="col-lg-5 order-lg-2 order-1">
		<div class="my-img-placeholder" style={{ backgroundImage: `url('${hero_img}')` }}></div>
	</div>
</section>
<!-- hero section -->


<style>
	.hero .my-img-placeholder {
		width: 100%;
		height: 100%;
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		border-radius: 8px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
	}
	@media (max-width: 991.98px) {
		.hero .my-img-placeholder {
			height: 300px !important;
			margin-bottom: 20px;
		}
	}
	@media (max-width: 991.98px) and (min-width: 768px) {
		.hero .my-img-placeholder {
			width: 350px !important;
		}
	}
</style>