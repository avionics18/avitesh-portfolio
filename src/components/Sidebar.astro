---
// data imports
import menu from "../data/menu.json";
import siteData from "../data/siteData.json";
const avatar_img = "/images/" + siteData.image;

// LOCAL
const {activeMenu} = Astro.props;
---

<div class="sidebar">
	<div id="follow-me" class="p-3 text-center">
		<h4 class="text-light m-0">Follow Me</h4>
		<img class="rounded-pill shadow-sm my-3" src={avatar_img} width="120" alt="Avinash Murmu" />
		<p class="small text-light ff-heading">Hey! This is Avitesh Murmu and I'm a full-stack developer. Welcome to my portfolio.</p>
		<p class="d-flex align-items-center justify-content-center" style="gap: 1rem;">
			{siteData.social_links.map(link => (
				<a href={link.url} class="btn btn-outline-light btn-sm" target="_blank"><i class={`${link.icon_class}`}></i></a>
			))}
		</p>
	</div>
	<!-- #follow-me -->
	<nav class="p-3 mt-3 overflow-auto">
		{menu.map(item => {
			if (item.title == activeMenu) {
				return (<a href={item.url} class="nav-items active"><i class={`${item.icon_class} mr-2`}></i>{item.title}</a>);
			} else {
				return (<a href={item.url} class="nav-items"><i class={`${item.icon_class} mr-2`}></i>{item.title}</a>);
			}
		})}
	</nav>
	<!-- nav -->
</div>
<!-- sidebar -->