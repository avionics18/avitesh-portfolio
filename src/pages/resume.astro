---
// components import

// layout imports
import MainLayout from "../layouts/MainLayout.astro";
import Sidebar from "../components/Sidebar.astro";

// data imports
import siteData from "../data/siteData.json";
const resume_img = "/images/" + siteData.resume.image;
const resume_pdf = "/pdf/" + siteData.resume.pdf;

// Local
const activeMenu = "Resume";
---

<MainLayout title={activeMenu}>
	<Sidebar slot="sidebar" activeMenu={activeMenu} />

	<section class="row">
		<div class="col-12">
			<div class="card shadow-sm">
				<div class="card-body">
					<h2 class="text-primary font-weight-bold">Resume</h2>
					<hr />
					<p class="text-secondary">
						I invite you to take a look at my resume, where you'll find a comprehensive overview of my skills, experience, and accomplishments. It highlights my professional journey, key projects I've worked on, and the contributions I've made in previous roles. I believe it will give you a clear picture of my qualifications and how I can add value to your team.
					</p>
					<div class="resume-placeholder position-relative">
						<img class="w-100" src={resume_img} alt="resume" />
					</div>
					<p class="text-center m-0">
						<a class="btn btn-primary px-4" href={resume_pdf} download><i class="fas fa-file-pdf mr-2"></i>Download Resume</a>
					</p>
				</div>
			</div>
			<!-- card -->
		</div>
		<!-- col-12 -->
	</section>
	<!-- resume row section -->
</MainLayout>

<style>
	.resume-placeholder::before {
		content: " ";
		display: block;
		width: 100%;
		height: 150px;
		background: linear-gradient(0deg, rgba(255,255,255,1), rgba(255,255,255,0.8));
		position: absolute;
		bottom: 0;
		z-index: 1;
	}
</style>